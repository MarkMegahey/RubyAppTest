<div class="modal-content">
  <%= form_for @car, url: {action: :create} do |f| %>
      <div class="modal-header">
        <h4 class="modal-title">Add a Product</h4>
      </div>
      <div class="modal-body">
        <p>
          <%= "<div class=\"alert alert-danger\">#{@car.errors.full_messages.first}</div>".html_safe if @car.errors.any? %>
        <div class="form-group">
          <div class="row">
            <div class="col-xs-8">
              <label class="control-label">Car Name</label>
              <%= f.text_field :name, :class => "form-control" %>
            </div>

            <div class="col-xs-4">
              <label class="control-label">Manufacturer</label>
              <%= f.text_field :manufacturer, :class => "form-control" %>
            </div>
          </div>
        </div>

        <div class="form-group">
          <div class="row">
            <div class="col-xs-12">
              <label class="control-label">Colour</label>
              <%= f.text_field :colour, :class => "form-control" %>
            </div>
          </div>
        </div>

        </p>
      </div>
      <div class="modal-footer">
        <%= link_to 'Back', { controller: 'cars', action: 'index'}, class: 'btn btn-default'%>
        <%= f.submit 'Create Car', :class => "btn btn-primary" %>
      </div>
  <% end %>
</div>
